#!/bin/bash

set -e

DIR="$(dirname "$0")/../"

function usage() {
    echo -n \
        "Usage: $(basename "$0")
Run linters and tests.
"
}

if [ "${BASH_SOURCE[0]}" = "${0}" ]; then
    if [ "${1:-}" = "--help" ]; then
        usage
    else
        echo "Updating client dependencies"
        docker-compose \
            run --rm --no-deps client \
            yarn install

        echo "Compiling client source code"
        docker-compose \
            run --rm --no-deps client \
            yarn run compile

        echo "Linting client source code"
        docker-compose \
            run --rm --no-deps client \
            yarn run lint
        docker-compose \
            run --rm --no-deps client \
            yarn run check-format

        echo "Executing client test suite"
        CI=1 docker-compose \
            run --rm --no-deps client \
            yarn run test

        echo "Updating server dependencies"
        docker-compose \
            run --rm --no-deps server \
            yarn install

        echo "Building server source code"
        docker-compose \
            run --rm --no-deps server \
            yarn run build

        echo "Linting server source code"
        docker-compose \
            run --rm --no-deps server \
            yarn run lint
        docker-compose \
            run --rm --no-deps server \
            yarn run check-format

        echo "Executing server test suite"
        CI=1 docker-compose \
            run --rm --no-deps server \
            yarn run test
    fi
fi

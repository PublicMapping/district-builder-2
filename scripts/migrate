#!/bin/bash

set -e

function usage() {
    echo -n \
        "Usage: $(basename "$0") [migration_name]
Run migrations using typeorm.
"
}

if [ "${BASH_SOURCE[0]}" = "${0}" ]; then
    if [ "${1:-}" = "--help" ]; then
        usage
    else
        docker-compose up -d \
            database app-backend-yarn

        docker-compose \
            run --rm app-backend-yarn "migration:run"
    fi
fi
